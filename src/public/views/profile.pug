doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet')
  link(type='text/css' href='/style/profile.css' rel='stylesheet')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
.container-xl.px-4.mt-4
  hr.mt-0.mb-4
  .row
    .col-xl-4
      form(action='')
        .card.mb-3.mb-xl-0
          .card-header Profile Picture
          .card-body.text-center
            #display_image.img-account-profile.rounded-circle.mb-3
            .small.font-italic.text-muted.mb-4 JPG or PNG no larger than 5 MB
            // Profile picture upload button
            .image_upload
              label.image_Label(for='image_upload' title='Enter your username')  upload file
              input#image_upload(type='file' name='image_upload')
    .col-xl-8
      // Account details card
      .card.mb-4
        .card-header Account Details
        .card-body
          form(action='' method='post')
            // Form Group (username)
            .mb-3
              label.small.mb-1(for='inputUsername') Username
              input#inputUsername.form-control(type='text' placeholder='Enter your username' value='')
            .row.gx-3.mb-3
              .col-md-6
                label.small.mb-1(for='Password') New Password
                input#password.form-control(type='password' placeholder='Enter your new passoword' value='')
              // Form Group (location)
              .col-md-6
                label.small.mb-1(for='inputPassword') Confirm Password
                input#confirm_password.form-control(type='password' placeholder='Confirm Password your new passoword' value='')
            // Form Group (email address)
            .mb-3
              label.small.mb-1(for='inputEmailAddress') Email address
              input#inputEmailAddress.form-control(type='email' placeholder='Enter your email address' value='')
            // Form Row
            .row.gx-3.mb-3
              // Form Group (phone number)
              .col-md-6
                label.small.mb-1(for='inputPhone') Phone number
                input#inputPhone.form-control(type='tel' placeholder='Enter your phone number' value='')
              // Form Group (birthday)
              .col-md-6
                label.small.mb-1(for='inputBirthday') Birthday
                input#inputBirthday.form-control(type='text' name='birthday' placeholder='Enter your birthday' value='')
            // Save changes button
            button.btn.btn-primary(type='button') Save changes
script(src="../script/profile.js")
